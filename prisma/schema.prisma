generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donnor {
  id        Int            @id @default(autoincrement())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  email     String         @unique
  password  String
  name      String
  profile   DonnorProfile?
}

model DonnorProfile {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now()) @map(name: "created_at")
  updatedAt       DateTime @updatedAt @map(name: "updated_at")
  displayName     String   @map(name: "display_name")
  avatar          String?
  url             String?
  uri             String?
  following_count Int      @default(0) // TODO: Make this a relation
  followers_count Int      @default(0) // TODO: Make this a relation
  userId          Int      @unique
  user            Donnor   @relation(fields: [userId], references: [id])
}

model Institution {
  id        Int            @id @default(autoincrement())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  email     String         @unique
  password  String
  name      String
  phone     String
  cnpj      String         @unique
  profile   InstitutionProfile?
}

model InstitutionProfile {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now()) @map(name: "created_at")
  updatedAt       DateTime @updatedAt @map(name: "updated_at")
  displayName     String   @map(name: "display_name")
  avatar          String?
  url             String?
  uri             String?
  following_count Int      @default(0) // TODO: Make this a relation
  followers_count Int      @default(0) // TODO: Make this a relation
  institutionId          Int      @unique
  donations       Int      @default(0)
  institution            Institution   @relation(fields: [institutionId], references: [id])

}
